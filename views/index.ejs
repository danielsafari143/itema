<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>R√©servation d'√âv√©nements - Accueil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
  <style>
    .hero-section {
      background: linear-gradient(135deg, rgba(13,110,253,0.8), rgba(0,123,255,0.6)), url('https://images.unsplash.com/photo-1557682224-5b8590cd9ec5?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') center/cover no-repeat;
      color: white;
      padding: 6rem 0;
      position: relative;
    }
    .hero-section::after {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0, 0, 0, 0.4);
      z-index: 0;
    }
    .hero-content {
      position: relative;
      z-index: 1;
    }
    .event-card:hover {
      transform: translateY(-5px);
      transition: all 0.3s ease;
      box-shadow: 0 1rem 1.5rem rgba(0,0,0,0.1);
    }
    .card-img-top {
      height: 240px;
      object-fit: cover;
    }
    .badge-price {
      background: rgba(13, 110, 253, 0.1);
      color: #0d6efd;
    }
  </style>
</head>

<body class="bg-light text-dark">

  <!-- üîù Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3 sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/"><%= t.nav.brand %></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav gap-2">
          <li class="nav-item"><a class="nav-link" href="/wedding"><%= t.nav.wedding %></a></li>
          <li class="nav-item"><a class="nav-link" href="/birthday"><%= t.nav.birthday %></a></li>
          <li class="nav-item"><a class="nav-link" href="/baptism"><%= t.nav.baptism %></a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/login"><i class="fas fa-lock me-1"></i>Administration</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- üéâ Hero -->
  <section class="hero-section text-center text-white">
    <div class="container hero-content">
      <h1 class="display-3 fw-bold mb-3"><%= t.home.hero.title %></h1>
      <p class="lead mb-4"><%= t.home.hero.subtitle %></p>
      <a href="#events" class="btn btn-light btn-lg px-4 shadow">
        <i class="fas fa-calendar-alt me-2"></i><%= t.home.hero.cta %>
      </a>
    </div>
  </section>

  <!-- üìÖ Events -->
  <section id="events" class="py-5">
    <div class="container">
      <div class="text-center mb-5">
        <h2 class="fw-bold display-5"><%= t.home.events.title %></h2>
        <p class="text-muted lead"><%= t.home.events.subtitle %></p>
      </div>

      <div class="row g-4">
        <!-- üíç Wedding -->
        <div class="col-lg-4 col-md-6">
          <div class="card event-card h-100 border-0 shadow-sm rounded-4">
            <img src="https://images.unsplash.com/photo-1519741497674-611481863552?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
              class="card-img-top rounded-top" alt="Mariage">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold"><%= t.home.cards.wedding.title %></h5>
              <p class="card-text flex-grow-1"><%= t.home.cards.wedding.description %></p>
              <div class="mb-3">
                <span class="badge badge-price fs-6 py-2 px-3">√Ä partir de $<%= prices.wedding %></span>
              </div>
              <a href="/wedding" class="btn btn-outline-primary w-100 mt-auto"><%= t.home.learnMore %></a>
            </div>
          </div>
        </div>

        <!-- üéÇ Birthday -->
        <div class="col-lg-4 col-md-6">
          <div class="card event-card h-100 border-0 shadow-sm rounded-4">
            <img src="https://images.unsplash.com/photo-1464207687429-7505649dae38?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
              class="card-img-top rounded-top" alt="Anniversaire">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold"><%= t.home.cards.birthday.title %></h5>
              <p class="card-text flex-grow-1"><%= t.home.cards.birthday.description %></p>
              <div class="mb-3">
                <span class="badge badge-price fs-6 py-2 px-3">√Ä partir de $<%= prices.birthday %></span>
              </div>
              <a href="/birthday" class="btn btn-outline-primary w-100 mt-auto"><%= t.home.learnMore %></a>
            </div>
          </div>
        </div>

        <!-- ‚úùÔ∏è Baptism -->
        <div class="col-lg-4 col-md-6 mx-md-auto">
          <div class="card event-card h-100 border-0 shadow-sm rounded-4">
            <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
              class="card-img-top rounded-top" alt="Bapt√™me">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-semibold"><%= t.home.cards.baptism.title %></h5>
              <p class="card-text flex-grow-1"><%= t.home.cards.baptism.description %></p>
              <div class="mb-3">
                <span class="badge badge-price fs-6 py-2 px-3">√Ä partir de $<%= prices.baptism %></span>
              </div>
              <a href="/baptism" class="btn btn-outline-primary w-100 mt-auto"><%= t.home.learnMore %></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ‚öì Footer -->
  <footer class="bg-dark text-white text-center py-4 mt-5">
    <div class="container small">
      <p class="mb-0"><%= t.footer.copyright %></p>
    </div>
  </footer>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
