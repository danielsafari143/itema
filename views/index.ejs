<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Réservation d'Événements - Accueil</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/"><%= t.nav.brand %></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/wedding"><%= t.nav.wedding %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/birthday"><%= t.nav.birthday %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/baptism"><%= t.nav.baptism %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/login">Administration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <h1 class="display-4 fw-bold mb-4"><%= t.home.hero.title %></h1>
            <p class="lead mb-4"><%= t.home.hero.subtitle %></p>
            <a href="#events" class="btn btn-primary btn-lg"><%= t.home.hero.cta %></a>
        </div>
    </section>

    <!-- Events Section -->
    <section id="events" class="py-5">
        <div class="container">
            <div class="row text-center mb-5">
                <div class="col-12">
                    <h2 class="display-5 fw-bold"><%= t.home.events.title %></h2>
                    <p class="lead text-muted"><%= t.home.events.subtitle %></p>
                </div>
            </div>
            
            <div class="row g-4">
                <!-- Wedding Card -->
                <div class="col-lg-4 col-md-6">
                    <div class="card event-card h-100">
                        <img src="https://images.unsplash.com/photo-1519741497674-611481863552?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" 
                             class="card-img-top" alt="Mariage">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= t.home.cards.wedding.title %></h5>
                            <p class="card-text"><%= t.home.cards.wedding.description %></p>
                            <div class="mt-auto">
                                <div class="mb-3">
                                    <span class="badge bg-primary fs-6">À partir de $<%= prices.wedding %></span>
                                </div>
                                <a href="/wedding" class="btn btn-primary"><%= t.home.learnMore %></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Birthday Card -->
                <div class="col-lg-4 col-md-6">
                    <div class="card event-card h-100">
                        <img src="https://images.unsplash.com/photo-1464207687429-7505649dae38?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" 
                             class="card-img-top" alt="Anniversaire">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= t.home.cards.birthday.title %></h5>
                            <p class="card-text"><%= t.home.cards.birthday.description %></p>
                            <div class="mt-auto">
                                <div class="mb-3">
                                    <span class="badge bg-primary fs-6">À partir de $<%= prices.birthday %></span>
                                </div>
                                <a href="/birthday" class="btn btn-primary"><%= t.home.learnMore %></a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Baptism Card -->
                <div class="col-lg-4 col-md-6">
                    <div class="card event-card h-100">
                        <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80" 
                             class="card-img-top" alt="Baptême">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= t.home.cards.baptism.title %></h5>
                            <p class="card-text"><%= t.home.cards.baptism.description %></p>
                            <div class="mt-auto">
                                <div class="mb-3">
                                    <span class="badge bg-primary fs-6">À partir de $<%= prices.baptism %></span>
                                </div>
                                <a href="/baptism" class="btn btn-primary"><%= t.home.learnMore %></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p><%= t.footer.copyright %></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
