<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.booking.title %> <%= eventName %> - Réservation d'Événements</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/"><%= t.nav.brand %></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/wedding"><%= t.nav.wedding %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/birthday"><%= t.nav.birthday %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/baptism"><%= t.nav.baptism %></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/login">Administration</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Booking Form Section -->
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="text-center mb-5">
                        <h1 class="display-4 fw-bold"><%= t.booking.title %> <%= eventName %></h1>
                        <p class="lead text-muted"><%= t.booking.subtitle %></p>
                        <div class="mt-3">
                            <span class="badge bg-primary fs-5 px-3 py-2">Prix: $<%= prices[eventType] %></span>
                        </div>
                    </div>

                    <div class="form-container">
                        <form action="/submit-booking" method="POST" id="bookingForm" novalidate>
                            <input type="hidden" name="eventType" value="<%= eventType %>">
                            
                            <div class="row g-3">
                                <!-- Full Name -->
                                <div class="col-md-6">
                                    <label for="fullName" class="form-label"><%= t.booking.form.fullName %></label>
                                    <input type="text" class="form-control" id="fullName" name="fullName" required>
                                    <div class="invalid-feedback">
                                        <%= t.booking.validation.fullName %>
                                    </div>
                                </div>

                                <!-- Phone Number -->
                                <div class="col-md-6">
                                    <label for="phone" class="form-label"><%= t.booking.form.phone %></label>
                                    <input type="tel" class="form-control" id="phone" name="phone" required>
                                    <div class="invalid-feedback">
                                        <%= t.booking.validation.phone %>
                                    </div>
                                </div>

                                <!-- Email -->
                                <div class="col-12">
                                    <label for="email" class="form-label"><%= t.booking.form.email %></label>
                                    <input type="email" class="form-control" id="email" name="email" required>
                                    <div class="invalid-feedback">
                                        <%= t.booking.validation.email %>
                                    </div>
                                </div>

                                <!-- Event Date -->
                                <div class="col-md-6">
                                    <label for="eventDate" class="form-label"><%= t.booking.form.eventDate %></label>
                                    <input type="date" class="form-control" id="eventDate" name="eventDate" required>
                                    <div class="invalid-feedback">
                                        <%= t.booking.validation.eventDate %>
                                    </div>
                                </div>

                                <!-- Number of Guests -->
                                <div class="col-md-6">
                                    <label for="guests" class="form-label"><%= t.booking.form.guests %></label>
                                    <input type="number" class="form-control" id="guests" name="guests" min="1" max="500" required>
                                    <div class="invalid-feedback">
                                        <%= t.booking.validation.guests %>
                                    </div>
                                </div>

                                <!-- Message/Notes -->
                                <div class="col-12">
                                    <label for="message" class="form-label"><%= t.booking.form.message %></label>
                                    <textarea class="form-control" id="message" name="message" rows="4" 
                                              placeholder="<%= t.booking.form.messagePlaceholder %>"></textarea>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-12 text-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg px-5">
                                        <%= t.booking.form.submit %>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!-- Back to Event Page -->
                    <div class="text-center mt-4">
                        <a href="/<%= eventType %>" class="btn btn-outline-secondary">
                            <%= t.booking.back %> <%= eventName %>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container text-center">
            <p><%= t.footer.copyright %></p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Form Validation Script -->
    <script>
        // Form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();

        // Set minimum date to today
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('eventDate').min = today;
        });

        // Form submission handling
        document.getElementById('bookingForm').addEventListener('submit', function(e) {
            const form = this;
            if (!form.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();
            }
            form.classList.add('was-validated');
        });
    </script>
</body>
</html>
